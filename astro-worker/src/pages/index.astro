    <script>
        // Loading Screen Management
        window.addEventListener('load', function() {
            const loadingScreen = document.getElementById('loadingScreen');
            // Add slight delay to ensure all images are processed
            setTimeout(() => {
                loadingScreen.classList.add('fade-out');
                // Remove from DOM after transition
                setTimeout(() => {
                    loadingScreen.style.display = 'none';
                }, 500);
            }, 1000); // Show loading for at least 1 second
        });

        // Optimized Intersection Observer for scroll animations
        let sectionObserver, contentObserver;

        const initializeObservers = () => {
            const sections = document.querySelectorAll('.section');
            const scrollDots = document.querySelectorAll('.scroll-dot');
            const contentBoxes = document.querySelectorAll('.content-box');

            const observerOptions = {
                root: null,
                rootMargin: '-10% 0px -10% 0px',
                threshold: 0.2
            };

            // Single observer for sections with scroll indicator update
            sectionObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                        
                        // Update scroll indicator efficiently
                        const sectionIndex = Array.from(sections).indexOf(entry.target);
                        scrollDots.forEach((dot, index) => {
                            dot.classList.toggle('active', index === sectionIndex);
                        });
                    }
                });
            }, observerOptions);

            // Separate observer for content boxes
            contentObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, observerOptions);

            // Observe elements
            sections.forEach(section => sectionObserver.observe(section));
            contentBoxes.forEach(box => contentObserver.observe(box));
        };

        // Optimized smooth scroll for navigation dots
        const initializeNavigation = () => {
            const scrollDots = document.querySelectorAll('.scroll-dot');
            scrollDots.forEach((dot, index) => {
                dot.addEventListener('click', () => {
                    const targetSection = document.getElementById(`section-${index}`);
                    if (targetSection) {
                        targetSection.scrollIntoView({ 
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        };

        // Daniel Pink popup functions (consolidated)
        const popupFunctions = {
            open() {
                const popup = document.getElementById('danielPinkPopup');
                popup.classList.add('show');
                document.body.style.overflow = 'hidden';
            },
            
            close() {
                const popup = document.getElementById('danielPinkPopup');
                popup.classList.remove('show');
                document.body.style.overflow = 'auto';
            }
        };

        // Make popup functions global
        window.openDanielPinkPopup = popupFunctions.open;
        window.closeDanielPinkPopup = popupFunctions.close;

        // Event listeners for popup
        const initializePopup = () => {
            const popup = document.getElementById('danielPinkPopup');
            
            // Close when clicking outside
            popup.addEventListener('click', function(e) {
                if (e.target === this) {
                    popupFunctions.close();
                }
            });

            // Close with Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    popupFunctions.close();
                }
            });
        };

        // Image loading optimization
        const optimizeImages = () => {
            const images = document.querySelectorAll('img');
            images.forEach(img => {
                // Add loading="lazy" if not already present
                if (!img.hasAttribute('loading')) {
                    img.setAttribute('loading', 'lazy');
                }
                
                // Error handling
                img.addEventListener('error', function() {
                    this.style.display = 'none';
                    const overlay = this.nextElementSibling;
                    if (overlay && overlay.classList.contains('image-overlay')) {
                        overlay.style.background = '#f8f9fa';
                        overlay.style.color = '#666';
                        overlay.innerHTML = '📷 Image unavailable';
                    }
                });
            });
        };

        // Initialize everything when DOM is ready
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize all components
            initializeObservers();
            initializeNavigation();
            initializePopup();
            optimizeImages();
            
            // Make first section visible immediately
            const firstSection = document.getElementById('section-0');
            if (firstSection) {
                firstSection.classList.add('visible');
            }
        });

        // Cleanup observers on page unload
        window.addEventListener('beforeunload', () => {
            if (sectionObserver) sectionObserver.disconnect();
            if (contentObserver) contentObserver.disconnect();
        });
    </script>
