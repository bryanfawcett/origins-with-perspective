            .container {
                padding: 0 30px;
            }
            
            .content-section {
                grid-template-columns: 1fr;
                gap: 60px;
            }
            
            .hero-title {
                font-size: 3.5rem;
            }
            
            .capabilities-grid {
                grid-template-columns: 1fr;
            }
            
            .question-grid {
                grid-template-columns: 1fr;
            }

