            font-weight: 500;
        }

        .full-width-section {
            background: rgba(255, 255, 255, 0.96);
            padding: 80px 60px;
            border-radius: 12px;
            margin: 80px 0;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
            border-left: 6px solid #FDD116;
        }

        .capabilities-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 40px;
            margin: 60px 0;
        }

        .capability-card {
            background: #ffffff;
            border: 2px solid #e9ecef;
            padding: 40px;
            border-radius: 8px;
            text-align: left;
            transition: all 0.3s ease;
        }

        .capability-card:hover {
            border-color: #00A651;
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .capability-card h3 {
            font-size: 1.5rem;
            margin-bottom: 20px;
            color: #2c3e50;
            font-weight: 500;
        }

